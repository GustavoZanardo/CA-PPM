SELECT
    @SELECT:DIM:USER_DEF:IMPLIED:PROJECT:ID:ID@,
    @SELECT:DIM_PROP:USER_DEF:IMPLIED:PROJECT:USER_NAME:USER_NAME@,
    @SELECT:DIM_PROP:USER_DEF:IMPLIED:PROJECT:FIRST_NAME:FIRST_NAME@,
    @SELECT:DIM_PROP:USER_DEF:IMPLIED:PROJECT:LAST_NAME:LAST_NAME@,
    @SELECT:DIM_PROP:USER_DEF:IMPLIED:PROJECT:CREATED_DATE:CREATED_DATE@, 
    @SELECT:DIM_PROP:USER_DEF:IMPLIED:PROJECT:SUBJECT:SUBJECT@,
    @SELECT:DIM_PROP:USER_DEF:IMPLIED:PROJECT:CODE:CODE@,
    @SELECT:DIM_PROP:USER_DEF:IMPLIED:PROJECT:STATUS:STATUS@
FROM (
SELECT t3.ID, T2.USER_NAME, T2.FIRST_NAME, T2.LAST_NAME, T1.CREATED_DATE,  T3.SUBJECT,
T4.LOOKUP_CODE CODE,
T4.NAME STATUS
FROM CAL_ACTION_ITEM_ASSIGNEES t1, CMN_SEC_USERS T2, CAL_ACTION_ITEMS T3, CMN_LOOKUPS_V T4
where T3.OWNER_ID = T2.ID
AND T1.CAL_ACTION_ITEM_ID = T3.ID
AND t1.ASSIGNEE_ID = @WHERE:PARAM:USER_ID@
AND  T4.LOOKUP_CODE=T1.status_code and T4.LANGUAGE_CODE = @WHERE:PARAM:LANGUAGE@ and T4.LOOKUP_TYPE = 'CAL_ACTIONITEM_STATUS'
) a
WHERE @filter@
